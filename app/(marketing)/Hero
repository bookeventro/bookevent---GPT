type FilterFieldProps = {
  icon: React.ReactNode;
  label: string;
  value: string;
};

function FilterField({ icon, label, value }: FilterFieldProps) {
  return (
    <div className="space-y-1.5">
      <span className="text-[11px] font-medium uppercase tracking-wide text-slate-400">
